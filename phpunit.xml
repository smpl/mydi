<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://raw.github.com/sebastianbergmann/phpunit/5.2/phpunit.xsd"
         colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory suffix="Test.php">./tests/</directory>
            <exclude>tests/AbstractLocatorTest.php</exclude>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>
</phpunit>