<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://raw.github.com/sebastianbergmann/phpunit/5.2/phpunit.xsd"
         bootstrap="vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
         colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory suffix="Test.php">./tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>
</phpunit>